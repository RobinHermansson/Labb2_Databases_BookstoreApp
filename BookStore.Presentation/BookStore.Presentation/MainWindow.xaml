<Window x:Class="BookStore.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Presentation"
        xmlns:viewModels="clr-namespace:BookStore.Presentation.ViewModels"
        xmlns:views="clr-namespace:BookStore.Presentation.View"
        mc:Ignorable="d"
        Height="720" Width="1080"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
        <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:BooksViewModel}">
            <views:BooksView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:NewBookViewModel}">
            <views:NewBookView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:EditBookViewModel}">
            <views:EditBookView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:BooksInventoryViewModel}">
            <views:BooksInventoryView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:AuthorsViewModel}">
            <views:AuthorsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:CustomersViewModel}">
            <views:CustomersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:OrdersViewModel}">
            <views:OrdersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:PublishersViewModel}">
            <views:PublishersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:StoresViewModel}">
            <views:StoresView />
        </DataTemplate>
        
    </Window.Resources>
    <Border Background="#272537"
            CornerRadius="20"
            >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
           
            <!-- Draggable Title Bar Area -->
            <Grid Grid.Row="0" 
                  Grid.ColumnSpan="3" 
                  Background="Transparent"
                  MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <TextBlock Text="BookStore"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="20,0,0,0"
                       Foreground="White"
                       FontSize="22"/>
                <Button Content="✕" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="15" 
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="IndianRed"
                        Click="CloseButton_Click"
                        Margin="0 0 27 0"
                        />
            </Grid>
            <StackPanel Grid.Row="1">
            <RadioButton Content="Books"
                 IsChecked="{Binding IsBooksSelected}"
                 Command="{Binding SwitchToBooksViewCommand}"
                 Height="50"
                 Foreground="White"
                 FontSize="14"
                 Style="{StaticResource MenuButtonTheme}" 
                 GroupName="MenuNavigation"/>
            <RadioButton Content="Authors"
                 IsChecked="{Binding IsAuthorsSelected}"
                 Command="{Binding SwitchToAuthorsViewCommand}"
                 Height="50"
                 Foreground="White"
                 FontSize="14"
                 Style="{StaticResource MenuButtonTheme}"
                 GroupName="MenuNavigation"/>
            <RadioButton Content="Customers"
                 IsChecked="{Binding IsCustomersSelected}"
                 Command="{Binding SwitchToCustomersViewCommand}"
                 Height="50"
                 Foreground="White"
                 FontSize="14"
                 Style="{StaticResource MenuButtonTheme}"
                 GroupName="MenuNavigation"/>
            <RadioButton Content="Orders"
                 IsChecked="{Binding IsOrdersSelected}"
                 Command="{Binding SwitchToOrdersViewCommand}"
                 Height="50"
                 Foreground="White"
                 FontSize="14"
                 Style="{StaticResource MenuButtonTheme}"
                 GroupName="MenuNavigation"/>
            <RadioButton Content="Publishers"
                 IsChecked="{Binding IsPublishersSelected}"
                 Command="{Binding SwitchToPublishersViewCommand}"
                 Height="50"
                 Foreground="White"
                 FontSize="14"
                 Style="{StaticResource MenuButtonTheme}"
                 GroupName="MenuNavigation"/>
            <RadioButton Content="Stores"
                 IsChecked="{Binding IsStoresSelected}"
                 Command="{Binding SwitchToStoresViewCommand}"
                 Height="50"
                 Foreground="White"
                 FontSize="14"
                 Style="{StaticResource MenuButtonTheme}"
                 GroupName="MenuNavigation"/> 
        </StackPanel>
            <ContentControl Grid.Row="1" 
                Grid.Column="1"
                Content="{Binding CurrentViewModel}"></ContentControl>
            <ContentControl Content="{Binding DialogContent}"
                            Grid.Column="1"
                            Grid.Row="1"
                Visibility="{Binding IsDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Border>
</Window>

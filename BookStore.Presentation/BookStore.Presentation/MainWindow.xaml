<Window x:Class="BookStore.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Presentation"
        xmlns:viewModels="clr-namespace:BookStore.Presentation.ViewModels"
        xmlns:views="clr-namespace:BookStore.Presentation.View"
        mc:Ignorable="d"
        Height="600" Width="920"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
        <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:BooksViewModel}">
            <views:BooksView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:AuthorsViewModel}">
            <views:AuthorsView />
        </DataTemplate>
        
    </Window.Resources>
    <Border Background="#272537"
            CornerRadius="20"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="BookStore"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="20,0,0,0"
                       Foreground="White"
                       FontSize="22"/>
            <Button Content="✕" 
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="15" 
                    BorderThickness="0"
                    Background="Transparent"
                    Foreground="IndianRed"
                    Click="CloseButton_Click"/>
            <StackPanel Grid.Row="1">
                <RadioButton Content="Books"
                     IsChecked="{Binding IsBooksSelected}"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource MenuButtonTheme}" 
                     GroupName="MenuNavigation"/>
                <RadioButton Content="Authors"
                     IsChecked="{Binding IsAuthorsSelected}"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource MenuButtonTheme}"
                     GroupName="MenuNavigation"/>
                <RadioButton Content="Customers"
                     IsChecked="{Binding IsCustomersSelected}"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource MenuButtonTheme}"
                     GroupName="MenuNavigation"/>
                <RadioButton Content="Orders"
                     IsChecked="{Binding IsOrdersSelected}"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource MenuButtonTheme}"
                     GroupName="MenuNavigation"/>
                <RadioButton Content="Publishers"
                     IsChecked="{Binding IsPublishersSelected}"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource MenuButtonTheme}"
                     GroupName="MenuNavigation"/>
                <RadioButton Content="Stores"
                     IsChecked="{Binding IsStoresSelected}"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource MenuButtonTheme}"
                     GroupName="MenuNavigation"/> 
            </StackPanel>
            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Margin="20 0 0 0"
                        Orientation="Horizontal">
                <TextBlock Text="Select shop:" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <ComboBox ItemsSource="{Binding Stores}"
                          DisplayMemberPath="StoreName" 
                          Height="20"
                          Width="180"
                          Margin="5 0 0 0"
                          VerticalAlignment="Center"
                          SelectedItem="{Binding SelectedStore}"/>
                
            </StackPanel>
            <ContentControl Grid.Row="1" 
                            Grid.Column="1"
                            Content="{Binding CurrentView}"></ContentControl>
        </Grid>
    </Border>
</Window>

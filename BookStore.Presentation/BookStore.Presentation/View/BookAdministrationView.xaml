<UserControl x:Class="BookStore.Presentation.View.BookAdministrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Go back" 
                Grid.Row="0"
                Command="{Binding BackToBooksCommand}"></Button>
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" 
            BorderBrush="LightGray" BorderThickness="1" 
            CornerRadius="5" Margin="5" Padding="10"
            Background="#14131C"> 
        <StackPanel>
            <TextBlock 
                Text ="{Binding TitleText}" 
                FontSize="24"
                Foreground="White"
                VerticalAlignment="Center"
                Margin="0 0 0 27"/>
            <Label Content="Isbn13"
                   Foreground="White"/>
            <TextBox x:Name="Isn13Box"
                     Text="{Binding ISBN13}"/>
            <Label Content="Title"
                   Foreground="White"></Label>
            <TextBox x:Name="TitleBox"
                     Text="{Binding Title}"/>
            <Label Content="Language"
                   Foreground="White"></Label>
            <ComboBox x:Name="LanguageBox"
                      ItemsSource="{Binding AvailableLanguages}"
                      SelectedItem="{Binding SelectedLanguage}"/>
            <Label Content="Price in Sek"
                   Foreground="White"></Label>
            <TextBox x:Name="PriceInSekBox"
                     Text="{Binding PriceInSek}"/>
            <Label Content="Publication date"
                   Foreground="White"></Label>
            <TextBox x:Name="PublicationDateBox"
                     Text="{Binding PublicationDate}"/>
            <Label Content="Quantity at store"
                   Foreground="White"/>
            <TextBox x:Name="InventoryBalanceBox"
                       Text="{Binding Quantity}"/>
        </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" 
            BorderBrush="LightGray" BorderThickness="1" 
            CornerRadius="5" Margin="5" Padding="10"
            Background="#14131C">
            <StackPanel>
                <TextBlock Text="Book's author"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="24"/>
                <CheckBox x:Name="AuthorCheckbox"
                      Content="Edit toggle"
                      FontSize="10"
                      Foreground="White"
                      Margin="0 10 0 0"/>
            <Label Foreground="White" Content="Current author: "></Label>
            <ComboBox x:Name="AuthorBox"
                      ItemsSource="{Binding AvailableAuthors}"
                      SelectedItem="{Binding SelectedAuthor}"
                      DisplayMemberPath="FirstName"
                      IsEnabled="{Binding ElementName=AuthorCheckbox, Path=IsChecked}"/>
            <Label Content="Firstname"
                   Foreground="White"/>
            <TextBox 
                Text="{Binding SelectedAuthor.FirstName}"
                IsEnabled="{Binding ElementName=AuthorCheckbox, Path=IsChecked}"/>
            <Label Content="Lastname"
                   Foreground="White"/>
            <TextBox 
                Text="{Binding SelectedAuthor.LastName}"
                IsEnabled="{Binding ElementName=AuthorCheckbox, Path=IsChecked}"/>
            <Label Content="Birthdate"
                   Foreground="White"/>
            <TextBox 
                Text="{Binding SelectedAuthor.BirthDate}"
                IsEnabled="{Binding ElementName=AuthorCheckbox, Path=IsChecked}"/>
            <Label Content="Deathdate"
                   Foreground="White"/>
            <TextBox 
                Text="{Binding SelectedAuthor.DeathDate}"
                IsEnabled="{Binding ElementName=AuthorCheckbox, Path=IsChecked}"/>
        </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" 
            BorderBrush="LightGray" BorderThickness="1" 
            CornerRadius="5" Margin="5" Padding="10"
            Background="#14131C">
            <StackPanel>
                <TextBlock Text="Book's publisher"
                   VerticalAlignment="Center"
                   Foreground="White"
                   FontSize="24"/>
                <CheckBox x:Name="PublisherCheckbox"
                      Content="Edit toggle"
                      FontSize="10"
                      Foreground="White"
                      Margin="0 10 0 0"/>
                <Label Foreground="White" Content="Current publisher: "></Label>
                <ComboBox x:Name="PublisherBox"
                      ItemsSource="{Binding AvailablePublishers}"
                      SelectedItem="{Binding SelectedPublisher}"
                      DisplayMemberPath="Name"
                      IsEnabled="{Binding ElementName=PublisherCheckbox, Path=IsChecked}"/>
                <Label Content="Name"
                   Foreground="White"/>
                <TextBox 
                Text="{Binding SelectedPublisher.Name}"
                IsEnabled="{Binding ElementName=PublisherCheckbox, Path=IsChecked}"/>
                <Label Content="Address"
                   Foreground="White"/>
                <TextBox 
                Text="{Binding SelectedPublisher.Address}"
                IsEnabled="{Binding ElementName=PublisherCheckbox, Path=IsChecked}"/>
                <Label Content="Country"
                   Foreground="White"/>
                <TextBox 
                Text="{Binding SelectedPublisher.Country}"
                IsEnabled="{Binding ElementName=PublisherCheckbox, Path=IsChecked}"/>
                <Label Content="Email"
                   Foreground="White"/>
                <TextBox 
                Text="{Binding SelectedPublisher.Email}"
                IsEnabled="{Binding ElementName=PublisherCheckbox, Path=IsChecked}"/>
            </StackPanel>
        </Border>
         
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Save" 
                    Command="{Binding SaveChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    />
            <Button Content="Cancel" 
                    Command="{Binding CancelChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Padding="10,5"
                    />
            <Label Content="{Binding StatusText}"
                   Foreground="Green"
                   FontWeight="Bold"
                   Margin="5 0 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="BookStore.Presentation.View.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
 <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <TextBlock Text="All Orders (locked for manual changes)" 
               Foreground="White"
               FontSize="24"/>
        <DataGrid Grid.Row="1"
                  Margin="0 20 20 20"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsSynchronizedWithCurrentItem="False"
                  SelectedItem="{Binding SelectedOrder}"
                  ItemsSource="{Binding DisplayOrderDetails}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Customer Id" Binding ="{Binding CustomerId}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Customer's First Name" Binding="{Binding CustomerFirstName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Customer's Last name" Binding="{Binding CustomerLastName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Books In Order" Binding="{Binding BooksInOrder}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Store" Binding="{Binding StoreName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Total order price" Binding="{Binding TotalOrderPrice}" IsReadOnly="True"/>
            </DataGrid.Columns>
            
        </DataGrid>    
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Save Changes" 
                    Command="{Binding SaveChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    />
            <Button Content="Cancel Changes" 
                    Command="{Binding CancelChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Padding="10,5"
                    />
        </StackPanel>
            </Grid>
</UserControl>

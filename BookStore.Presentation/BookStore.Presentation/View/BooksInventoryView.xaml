<UserControl x:Class="BookStore.Presentation.View.BooksInventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.View"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
<Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                Grid.Column="0"
                Margin="0 0 0 0"
                Orientation="Horizontal">
                <TextBlock Text="All books not at selected stor: " 
                           FontSize="24"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding AllAvailableBooks}"
                          DisplayMemberPath="StoreName" 
                          Height="20"
                          Width="180"
                          Margin="10 0 0 0"
                          VerticalAlignment="Center"
                          Style="{StaticResource DarkComboBox}"
                          ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                          SelectedItem="{Binding SelectedAvailableBook}"/>
            </StackPanel>
        <DataGrid Grid.Row="1"
                  Grid.Column="0"
                  Margin="0 20 20 20"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectedItem="{Binding SelectedBookAtStore}"
                  ItemsSource="{Binding BooksAtStore}"
                  Style="{StaticResource DarkDataGrid}"
                  ColumnHeaderStyle="{StaticResource DarkDataGridColumnHeader}"
                  RowStyle="{StaticResource DarkDataGridRow}"
                  CellStyle="{StaticResource DarkDataGridCell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN13" Binding="{Binding ISBN13}" Width="Auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="0 0 5 0">
            <Button VerticalAlignment="Center"
                    Content="+"
                    Margin="0 0 0 10"
                    Style="{StaticResource AddIconButton}"
                    Command="{Binding AddBookCommand}"
                    CommandParameter="{Binding SelectedBook}"/>
            <Button VerticalAlignment="Center"
                    Content="-"
                    Margin="0 10 0 0"
                    Style="{StaticResource RemoveIconButton}"
                    Command="{Binding RemoveBookCommand}"
                    CommandParameter="{Binding SelectedBook}"
                    IsEnabled="{Binding SelectedBook, Converter={StaticResource NullToBooleanConverter}}"/>
                                 
        </StackPanel>
        <StackPanel Grid.Row="2" 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="0,10,0,0">
          </StackPanel>
          <StackPanel Grid.Row="0"
                Grid.Column="3"
                Margin="0 0 0 0"
                Orientation="Horizontal">
                <TextBlock Text="Books at: " 
                           FontSize="24"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Stores}"
                          DisplayMemberPath="StoreName" 
                          Height="20"
                          Width="180"
                          Margin="10 0 0 0"
                          VerticalAlignment="Center"
                          Style="{StaticResource DarkComboBox}"
                          ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                          SelectedItem="{Binding SelectedStore}"/>
            </StackPanel>
        <DataGrid Grid.Row="1"
                  Grid.Column="3"
                  Margin="0 20 20 20"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectedItem="{Binding SelectedBookAtStore}"
                  ItemsSource="{Binding BooksAtStore}"
                  Style="{StaticResource DarkDataGrid}"
                  ColumnHeaderStyle="{StaticResource DarkDataGridColumnHeader}"
                  RowStyle="{StaticResource DarkDataGridRow}"
                  CellStyle="{StaticResource DarkDataGridCell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN13" Binding="{Binding ISBN13}" Width="Auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>

</UserControl>

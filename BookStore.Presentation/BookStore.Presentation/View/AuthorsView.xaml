<UserControl x:Class="BookStore.Presentation.View.AuthorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.View"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
     <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <TextBlock Text="All authors" 
               Foreground="White"
               FontSize="24"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Add" 
                    Command="{Binding AddNewAuthor}"
                    Margin="0 0 5 0"
                    />
            <Button Content="Remove"
                    Command="{Binding RemoveSelectedAuthor}"
                    IsEnabled="{Binding AuthorIsSelected}"
                    Margin="0 0 5 0"
                    />
            <Button Content="Change"
                    Command="{Binding ChangeSelectedAuthorCommand}"
                    IsEnabled="{Binding AuthorIsSelected}"
                    Margin="0 0 5 0"
                    />
        </StackPanel>
        <DataGrid Grid.Row="1"
                  Margin="0 20 20 20"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  SelectedItem="{Binding SelectedAuthor}"
                  ItemsSource="{Binding Authors}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First name" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Last name" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate}"/>
                <DataGridTextColumn Header="Death Date" Binding="{Binding DeathDate}"/>
                <DataGridTextColumn Header="Books (ISBN13)" Binding="{Binding BooksIsbn13}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Books (Titles)" Binding="{Binding BookTitles}" IsReadOnly="True"/>
                
            </DataGrid.Columns>
            
        </DataGrid>    
<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
    <Button Content="Save Changes" 
            Command="{Binding SaveChangesCommand}"
            IsEnabled="{Binding HasChanges}"
            Margin="0,0,10,0"
            Padding="10,5"
            />
    <Button Content="Cancel Changes" 
            Command="{Binding CancelChangesCommand}"
            IsEnabled="{Binding HasChanges}"
            Padding="10,5"
            />
</StackPanel>
    </Grid>
                
    </UserControl>

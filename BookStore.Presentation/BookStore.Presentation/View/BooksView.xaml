<UserControl x:Class="BookStore.Presentation.View.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="650"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
    <StackPanel Grid.Row="0"
                Grid.Column="1"
                Margin="0 0 0 0"
                Orientation="Horizontal">
                <TextBlock Text="Books at: " 
                           FontSize="24"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Stores}"
                          DisplayMemberPath="StoreName" 
                          Height="20"
                          Width="180"
                          Margin="10 0 0 0"
                          VerticalAlignment="Center"
                          Style="{StaticResource DarkComboBox}"
                          ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                          SelectedItem="{Binding SelectedStore}"/>
            </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0 0 5 0">
            <Button VerticalAlignment="Center"
                    Content="{fa:Icon warehouse}"
                    Margin="0 0 0 10"
                    Style="{StaticResource WarehouseIconButton}"
                    Command="{Binding ManageBookInventoryCommand}"
                    CommandParameter="{Binding SelectedBook}"/>
             <Button VerticalAlignment="Center" 
                    Content="{fa:Icon pentosquare}" 
                    Command="{Binding EditBookCommand}"
                    IsEnabled="{Binding SelectedBook, Converter={StaticResource NullToBooleanConverter}}"
                    Style="{StaticResource WarehouseIconButton}"
                    Margin="0 10 0 0"
                    Padding="10,5"
                    />

            <Button VerticalAlignment="Center"
                    Content="+"
                    Margin="0 10 0 10"
                    Style="{StaticResource AddIconButton}"
                    Command="{Binding AddBookCommand}"
                    CommandParameter="{Binding SelectedBook}"/>
            <Button VerticalAlignment="Center"
                    Content="-"
                    Margin="0 10 0 0"
                    Style="{StaticResource RemoveIconButton}"
                    Command="{Binding RemoveBookCommand}"
                    CommandParameter="{Binding SelectedBook}"
                    IsEnabled="{Binding SelectedBook, Converter={StaticResource NullToBooleanConverter}}"/>
                                 
        </StackPanel>
        <DataGrid Grid.Row="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Margin="0 20 20 10"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectedItem="{Binding SelectedBook}"
                  ItemsSource="{Binding Books}"
                  Style="{StaticResource DarkDataGrid}"
                  ColumnHeaderStyle="{StaticResource DarkDataGridColumnHeader}"
                  RowStyle="{StaticResource DarkDataGridRow}"
                  CellStyle="{StaticResource DarkDataGridCell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN13" Binding="{Binding ISBN13}" Width="Auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
                <DataGridTextColumn Header="Price in SEK" Binding="{Binding PriceInSek}" Width="Auto"/>
                <DataGridTextColumn Header="Publication date" Binding="{Binding PublicationDate}" Width="Auto"/>
                <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="Auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="0,10,0,0">
            <Button Content="Save Changes" 
                    Command="{Binding SaveChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Style="{StaticResource PrimaryDarkButton}"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    />
            <Button Content="Cancel Changes" 
                    Command="{Binding CancelChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Style="{StaticResource DarkButton}"
                    Padding="10,5"
                    />
                   </StackPanel>

        
            
    </Grid>
</UserControl>

<UserControl x:Class="BookStore.Presentation.View.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.View"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
    <StackPanel Grid.Row="0"
                Grid.Column="0"
                Margin="0 0 0 0"
                Orientation="Horizontal">
                <TextBlock Text="Books at: " 
                           FontSize="24"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Stores}"
                          DisplayMemberPath="StoreName" 
                          Height="20"
                          Width="180"
                          Margin="5 0 0 0"
                          VerticalAlignment="Center"
                          SelectedItem="{Binding SelectedStore}"/>
                
            </StackPanel>
        <DataGrid Grid.Row="1"
                  Grid.ColumnSpan="2"
                  Margin="0 20 20 20"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  SelectedItem="{Binding SelectedBook}"
                  ItemsSource="{Binding Books}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN13" Binding="{Binding ISBN13}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Price in SEK" Binding="{Binding PriceInSek}"/>
                <DataGridTextColumn Header="Publication date" Binding="{Binding PublicationDate}"/>
                <DataGridTextColumn Header="Language" Binding="{Binding Language}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Save Changes" 
                    Command="{Binding SaveChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    />
            <Button Content="Cancel Changes" 
                    Command="{Binding CancelChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Padding="10,5"
                    />
            <Button Content="Deep Edit" 
                    Command="{Binding EditBookCommand}"
                    IsEnabled="{Binding SelectedBook}"
                    Margin="10 0 0 0"
                    Padding="10,5"
                    />
        </StackPanel>

        
            
    </Grid>
</UserControl>

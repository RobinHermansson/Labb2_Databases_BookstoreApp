<UserControl x:Class="BookStore.Presentation.View.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.View"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <TextBlock Text="Books at selected location" 
               Foreground="White"
               FontSize="24"/>
        <DataGrid Grid.Row="1"
                  Margin="0 20 20 20"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  SelectedItem="{Binding SelectedBook}"
                  ItemsSource="{Binding Books}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN13" Binding="{Binding ISBN13}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Price in SEK" Binding="{Binding PriceInSek}"/>
                <DataGridTextColumn Header="Publication date" Binding="{Binding PublicationDate}"/>
                <DataGridTextColumn Header="Language" Binding="{Binding Language}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Save Changes" 
                    Command="{Binding SaveChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    />
            <Button Content="Cancel Changes" 
                    Command="{Binding CancelChangesCommand}"
                    IsEnabled="{Binding HasChanges}"
                    Padding="10,5"
                    />
        </StackPanel>

        
            
    </Grid>
</UserControl>
